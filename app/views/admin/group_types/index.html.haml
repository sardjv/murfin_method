.container.my-4
  .row
    .col-12
      = link_to [:new, :admin, :group_type], class: 'btn btn-primary float-right mb-3' do
        = icon('plus')
        = I18n.t('actions.add', model_name: GroupType.model_name.human.titleize)
  .row
    .col-12
      - @group_types.each_with_index do |group_type, index|
        #accordion
          = render partial: 'group_type_card', locals: { group_type: group_type, index: index }
