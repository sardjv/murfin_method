<div class='container my-4'>

  <div class='row'>
    <div class='col-12'>
      <h5>
        <% if @tag_type.persisted? %>
          <%= I18n.t('actions.edit', model_name: TagType.model_name.human.downcase) %>
        <% else %>
          <%= I18n.t('actions.add', model_name: TagType.model_name.human.downcase) %>
        <% end %>
      </h5>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= bootstrap_form_for [:admin, @tag_type] do |f| %>
        <%= f.text_field :name, label: I18n.t('tag_types.labels.name'),
                                placeholder: I18n.t('tag_types.labels.name'),
                                help:  I18n.t('tag_types.labels.name_help'),
                                required: true %>
        <%= f.submit I18n.t('actions.save'), class: 'btn btn-primary', style: 'margin-top: 10px;' %>
        <%= link_to I18n.t('actions.cancel'), :back, class: 'btn btn-outline-secondary mt-2' %>
      <% end %>
    </div>
  </div>

</div>
