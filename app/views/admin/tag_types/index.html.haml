.container.my-4
  .row
    .col-12
      = link_to [:new, :admin, :tag_type], class: 'btn btn-primary float-right mb-3' do
        = icon('plus')
        = I18n.t('actions.add', model_name: TagType.model_name.human.titleize)
  .row
    .col-12
      - @tag_types.each_with_index do |tag_type, index|
        #accordion
          = render partial: 'tag_type_card', locals: { tag_type: tag_type, index: index }
