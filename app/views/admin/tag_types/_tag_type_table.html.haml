.table-responsive
  %table.table.table-bordered.mb-0
    %tbody
      - tag_type.tags.each do |tag|
        %tr
          %td
            = tag.name_with_ancestors
          %td
            = link_to [:edit, :admin, tag], class: 'btn btn-link' do
              = icon('pencil')
          %td
            = link_to [:admin, tag], class: 'btn btn-link', method: :delete, data: { confirm: I18n.t('actions.confirm') } do
              = icon('trash')
