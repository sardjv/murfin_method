<div class='row'>
  <% if (tag_type = f.object.tag_type.presence) %>
    <label class='col-md-3 col-form-label'><%= tag_type.name %></label>
    <div class='col-md-3'>
      <%= f.hidden_field :tag_type_id %>
      <%= f.select :tag_id,
        tag_type.tags.map { |t| [ t.name, t.id, { class: t.parent_id }] },
        include_blank: I18n.t('prompts.none'),
        hide_label: true
      %>
    </div>
  <% end %>
</div>
