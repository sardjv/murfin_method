%tr.nested-fields
  = f.hidden_field :id
  = render 'shared/tag_associations', f: f
  %td{ class: Activity.human_attribute_name('duration').parameterize }
    = f.number_field :seconds_per_week, { class: 'duration-picker-activity', hide_label: true, step: :any, disabled: !policy(plan).update? }
    - f.object.errors.full_messages_for(:duration).each do |error|
      .error.text-danger.small= error
  - if policy(plan).update?
    %td
      = link_to_remove_association f do
        = icon('trash')
