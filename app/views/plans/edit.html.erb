<div class='container my-4'>

  <div class='row'>
    <div class='col-12'>
      <h5>
        <% if @plan.persisted? %>
          <%= I18n.t('plan.edit') %>
        <% else %>
          <%= I18n.t('plan.add') %>
        <% end %>
      </h5>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= bootstrap_form_for @plan do |f| %>
        <%= f.datetime_select :start_time,
          label: I18n.t('plan.labels.start_time')
        %>

        <%= f.datetime_select :end_time,
          label: I18n.t('plan.labels.end_time')
        %>

        <%= I18n.t('plan.labels.activities') %>

        <div class='row'>
          <%= f.fields_for :activities do |activity_form| %>
            <%= render 'activity_fields', f: activity_form %>
          <% end %>
          <%= link_to_add_association I18n.t('activity.add'), f, :activities %>
        </div>

        <%= f.submit I18n.t('plan.save'), class: 'btn btn-primary mt-2' %>
        <%= link_to I18n.t('plan.cancel'), :back, class: 'btn btn-outline-secondary mt-2' %>
      <% end %>
    </div>
  </div>

</div>
