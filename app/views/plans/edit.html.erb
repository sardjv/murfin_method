<div class='container my-4'>

  <div class='row'>
    <div class='col-12'>
      <h5>
        <% if @plan.persisted? %>
          <%= I18n.t('plan.edit') %>
        <% else %>
          <%= I18n.t('plan.add') %>
        <% end %>
      </h5>
    </div>
  </div>

  <div class='row'>
    <div class='col-12'>
      <%= bootstrap_form_for @plan do |f| %>
        <%= f.date_select :start_date,
          label: I18n.t('plan.labels.start_date')
        %>

        <% if @plan.persisted? %>
          <%= f.date_select :end_date,
            label: I18n.t('plan.labels.end_date')
          %>
        <% end %>

        <%= I18n.t('plan.labels.activities') %>

        <div class='row'>
          <div class='col-md'><%= I18n.t('activity.labels.day') %></div>
          <div class='col-md'><%= I18n.t('activity.labels.start_time') %></div>
          <div class='col-md'><%= I18n.t('activity.labels.end_time') %></div>
          <div class='col-md'></div>
        </div>
        <%= f.fields_for :activities do |activity_form| %>
          <%= render 'activity_fields', plan_form: f, f: activity_form %>
        <% end %>

        <div>
          <%= link_to_add_association I18n.t('activity.add'), f, :activities %>
        </div>

        <%= f.submit I18n.t('plan.save'), class: 'btn btn-primary mt-2' %>
        <%= link_to I18n.t('plan.cancel'), plans_path, class: 'btn btn-outline-secondary mt-2' %>
      <% end %>
    </div>
  </div>

</div>
