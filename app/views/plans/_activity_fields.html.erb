<%
  day_options = options_for_select(
    [:monday, :tuesday, :wednesday, :thursday, :friday, :saturday, :sunday].map { |d| [d.to_s.capitalize, d] },
    selected: f.object.day
  )
%>

<tr class='nested-fields'>
  <td><%= f.select :day, day_options, label: '<span></span>'.html_safe %></td>
  <td><%= f.time_select :start_time, label: '<span></span>'.html_safe, ignore_date: true %></td>
  <td><%= f.time_select :end_time, label: '<span></span>'.html_safe, ignore_date: true %></td>
  <td><%= link_to_remove_association I18n.t('activity.remove'), f %></td>
</tr>
