<div class='nested-fields card mb-4'>
  <div class='card-body'>
    <div class='row'>
      <label class='col-md-3 col-form-label'><%= Activity.human_attribute_name('duration') %></label>
      <div class='col-md-9'>
        <%= f.number_field :seconds_per_week, class: 'duration-picker-activity', hide_label: true, step: :any %>
      </div>
    </div>

    <%= render 'shared/tag_associations', f: f %>

    <div class='row'>
      <div class='col-md'>
        <%= link_to_remove_association I18n.t('actions.remove', model_name: Activity.model_name.human), f %>
      </div>
    </div>
  </div>
</div>
