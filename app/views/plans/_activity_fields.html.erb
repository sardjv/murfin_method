<tr class='nested-fields'>
  <% f.object.build_missing_activity_tags %>
  <%= f.fields_for :activity_tags, f.object.activity_tags.sort_by { |at| at.tag_type.name_with_parent } do |activity_tag_form| %>
    <td>
      <%= render 'activity_tag_fields', f: activity_tag_form %>
    </td>
  <% end %>
  <td>
    <%= f.number_field :seconds_per_week, class: 'duration-picker-activity', hide_label: true, step: :any %>
  </td>
  <td>
    <%= link_to_remove_association f do %>
      <%= icon('trash') %>
    <% end %>
  </td>
</tr>
