<div class='card mt-2' id="<%= 'team-individual-box-' + label.downcase.downcase.gsub(/\s+/, '-') unless label.blank? -%>">
  <div class='card-body highlight'>
    <div class='card-icon <%= colour %>'>
      <%= icon(icon, width: '1em') %>
    </div>
    <h2>
      <%= value %>
    </h2>
    <div class='highlight-label'>
      <%= label %>
    </div>
  </div>
</div>
