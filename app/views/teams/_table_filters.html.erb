<div class='card mb-4'>
  <div class='card-body'>

    <%= form_for :query, url: individuals_team_path(@user_group), method: :get do |form| %>
      <div class='form-row'>
        <div class='form-group col-md-3'>
          <div><label><%= I18n.t('graph.filter.tags') %></label></div>
          <div><%= form.select :filter_tag_ids,
            grouped_options_for_select(tag_options, @presenter.team_stats_presenter.filter_tag_ids),
            {},
            { class: 'filter', multiple: true, 'data-actions-box' => true }
          %></div>
        </div>
        <div class='form-group col-md-3'>
          <div ><label><%= I18n.t('graph.filter.start_time') %></label></div>
          <div ><%= form.date_select :filter_start_time,
            { order: %i[month year], default: @presenter.team_stats_presenter.filter_start_time },
            class: 'filter'
          %></div>
        </div>
        <div class='form-group col-md-3'>
          <div><label><%= I18n.t('graph.filter.end_time') %></label></div>
          <div><%= form.date_select :filter_end_time,
            { order: %i[month year], default: @presenter.team_stats_presenter.filter_end_time },
            class: 'filter'
          %></div>
        </div>

        <div class='form-group col-md-3'>
          <div><label></label></div>
          <%= form.submit I18n.t('actions.filter'), name: nil, class: 'btn btn-primary mt-2' %>
        </div>
      </div>

    <% end  %>

  </div>
</div>
